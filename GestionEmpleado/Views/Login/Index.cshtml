@using GestionEmpleado.Models;
@model Usuario
@{
    ViewData["Title"] = "Iniciar sesión";
}
<div class="login-page" style="height:75vh; background:inherit;">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card">
            <img src="~/img/murales.png" alt="imageIgssHeader" class="card-img-top img-fluid"/>
            <div class="text-center">
                <img src="~/img/logo.png" alt="IGSSGT" class="img-fluid imagen rounded-circle img-thumbnail" width="100px" height="100px" />
            </div>
            <div class="card-body login-card-body">
                <p class="login-box-msg">Ingresar credenciales</p>
                <form action="~/Login" method="post" autocomplete="off">
                    <div class="input-group mb-2">
                        <input type="email" class="form-control" name="Correo" placeholder="Correo electrónico" autofocus autocomplete="off">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Correo" class="text-danger"></span>
                    <div class="input-group mb-2">
                        <input type="password" class="form-control" name="Password" placeholder="Contraseña">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="row">
                        <div class="col">
                            <div class="text-center mb-3">
                                <button type="submit" class="btn btn-primary btn-block click-boton">Iniciar sesión</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- /.social-auth-links -->

                <p class="mb-1">
                    <a href="#">Olvidó su contraseña?</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
</div>

